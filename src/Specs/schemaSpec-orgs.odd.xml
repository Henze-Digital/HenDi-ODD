    <specGrpRef target="../Specs/common-specs.odd.xml#hwh-gaiji"/>
    <specGrpRef target="../Specs/common-specs.odd.xml#hwh-tei-macros"/>
    <specGrpRef target="../Specs/common-specs.odd.xml#hwh-nameLikeEntities"/>
    
    <elementSpec ident="org" mode="change" module="namesdates">
        <classes mode="change">
            <memberOf key="att.docStatus" mode="add"/>
        </classes>
        <constraintSpec scheme="schematron" ident="enforceWhitespace" mode="delete">
            <!--</constraint>-->
        </constraintSpec>
        <attList>
            <attDef ident="status" usage="req" mode="add"/>
            <attDef ident="source" mode="change" usage="req">
                <valList type="closed" mode="change">
                    <valItem ident="HWH" mode="add">
                        <desc versionDate="2021-10-20" xml:lang="en">persons from the database of
                            the Henze-Digital project (HWH).</desc>
                        <desc versionDate="2021-10-20" xml:lang="de">Personen aus dem Datenbestand
                            des Projektes Henze-Digital (HWH).</desc>
                    </valItem>
                </valList>
            </attDef>
            <attDef ident="xml:id" mode="change" usage="req">
                <datatype>
                    <dataRef key="hwh.orgs.pointer"/>
                </datatype>
            </attDef>
        </attList>
    </elementSpec>
    
