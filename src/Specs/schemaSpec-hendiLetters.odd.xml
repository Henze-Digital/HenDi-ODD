    	<constraintSpec scheme="schematron" ident="divTypeRow" mode="add">
    		<constraint>
    			<sch:rule context="tei:div[@type='row']">
    				<sch:assert test="tei:div">If type="row" is used the child elements have to be organized with divs.</sch:assert>
    			</sch:rule>
