    	<constraintSpec scheme="schematron" ident="divRotation" mode="add">
    		<constraint>
    			<sch:rule context="tei:div[@rotation]">
    				<sch:assert test="number(@rotation) gt 0 and number(@rotation) lt 361 and not(starts-with(@rotation,'0'))">The value must be between 1 and 360 (without leading zeros).</sch:assert>
    			</sch:rule>
    		</constraint>
    	</constraintSpec>
    	<constraintSpec scheme="schematron" ident="divColSumControl" mode="add">
    		<constraint>
    			<sch:rule context="tei:div[@type='row' and tei:div[contains(@type,'col-')]]">
    				<sch:let name="sumOfCols" value="sum(tei:div[contains(@type,'col-')]/number(substring-after(@type,'col-')))"/>
    				<sch:report test="$sumOfCols &gt; 12">The sum of all cols must not be greater than 12. It's <sch:value-of select="$sumOfCols"/>.</sch:report>
    			</sch:rule>
    		</constraint>
    	</constraintSpec>
